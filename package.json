{
  "name": "@cordlesssteve/evidence-gate",
  "version": "0.1.0",
  "description": "A framework forcing evidence-based claims via statistical significance + effect size + practical threshold",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "keywords": [
    "statistics",
    "t-test",
    "hypothesis-testing",
    "a-b-testing",
    "effect-size",
    "evidence-based",
    "benchmarking"
  ],
  "author": "cordlesssteve",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cordlesssteve/evidence-gate.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "simple-statistics": "^7.8.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^2.1.0"
  }
}
